{
  "name": "create-act",
  "version": "0.0.1",
  "type": "module",
  "license": "MIT",
  "author": "Ywenhao",
  "bin": {
    "create-act": "index.js",
    "cva": "index.js"
  },
  "files": [
    "index.js",
    "template-*",
    "dist"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache .",
    "dev": "unbuild --stub",
    "build": "unbuild",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ywenhao/create-act.git",
    "directory": "packages/create-vite"
  },
  "bugs": {
    "url": "https://github.com/ywenhao/create-act/issues"
  },
  "homepage": "https://github.com/ywenhao/vite/create-act/readme",
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "@types/prompts": "^2.4.9",
    "cross-spawn": "^7.0.3",
    "execa": "^9.3.0",
    "fs-extra": "^11.2.0",
    "kolorist": "^1.8.0",
    "minimist": "^1.2.8",
    "picocolors": "^1.0.1",
    "prompts": "^2.4.2",
    "rollup": "^4.19.1",
    "rollup-plugin-license": "^3.5.2",
    "simple-git-hooks": "^2.11.1",
    "unbuild": "^2.0.0",
    "vitest": "^2.0.4",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.17.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/*/{src,types}/**/*.ts": [
      "eslint --cache --fix"
    ],
    "packages/**/*.d.ts": [
      "eslint --cache --fix"
    ]
  },
  "packageManager": "pnpm@9.6.0"
}
